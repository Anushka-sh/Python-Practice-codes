def fun(s1, s2):

    FirstString = s1[:1] + s2[:1]
    middle_char = s1[int(len(s1) / 2):int(len(s1) / 2) + 1] + s2[int(len(s2) / 2):int(len(s2) / 2) + 1]
    LastChar = s1[len(s1)-1] + s2[len(s2)-1]
    res = FirstString + middle_char + LastChar
    print("Mix String is:", res)

fun("America", "Japan")
